
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    
    <Page.actionBar>
        <ActionBar title="SignUp" icon="" class="action-bar">
        <ActionItem tap="{{ onback }}" android.systemIcon="ic_menu_back"></ActionItem>
        </ActionBar>
    </Page.actionBar>

    <FlexboxLayout class="page">
        <StackLayout class="form">
            <StackLayout class="input-field">
                <TextField hint="Username" text='{{ username }}' secure="false" keyboardType="email" class="input" ></TextField>
                <Label class="hr-light" />
            </StackLayout>
            <StackLayout class="input-field">
                <TextField hint="Email" text='{{ email }}' secure="false" keyboardType="email" class="input" ></TextField>
                <Label class="hr-light" />
            </StackLayout>
            <StackLayout class="input-field">
                <TextField hint="Password" text="{{ password }}" secure="true" class="input"></TextField>
                <Label class="hr-light" />
            </StackLayout>
            <StackLayout class="input-field">
                <TextField hint="Confirm-Password" text="{{ c_password }}" secure="true" class="input"></TextField>
                <Label class="hr-light" />
            </StackLayout>
            <StackLayout>
                <Button text="Signup" tap="{{ dosignup }}" class="btn btn-primary btn-active"/>
            </StackLayout>
        </StackLayout>
    </FlexboxLayout>
    
</Page>
